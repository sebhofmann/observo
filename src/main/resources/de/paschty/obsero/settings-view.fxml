<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>

<VBox xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="de.paschty.obsero.SettingsController" spacing="15" alignment="CENTER" prefWidth="300" prefHeight="150" style="-fx-padding: 20;">
  <Label text="%settings.title" style="-fx-font-size: 16px;" />
  <HBox spacing="10" alignment="CENTER">
    <Label text="%settings.language" />
    <ComboBox fx:id="languageComboBox" prefWidth="120" />
  </HBox>
  <HBox spacing="10" alignment="CENTER">
    <Button text="%settings.save" onAction="#onSaveClick" />
    <Button text="%settings.cancel" onAction="#onCancelClick" />
  </HBox>
</VBox>

